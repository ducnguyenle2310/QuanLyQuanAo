@{
    ViewBag.Title = "DangNgap";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h1 style="font-size:24px; color:#da291c; text-align:center">@ViewBag.ThongBao</h1>
<div style="display:flex; flex-direction:column; align-items:center; justify-content:center">
    @using (Html.BeginForm())
    {
        <h2 style="text-transform:uppercase; font-size:24px; font-weight:700">tài khoản</h2>
        <h4 style="font-size:18px; margin-bottom:15px"><b>Đăng nhập</b> hoặc <b>đăng ký</b> để tận hưởng mua săm nhanh hơn và dễ dàng hơn</h4>
        <div style="display:flex">
            <div style="display:flex; flex-direction:column; padding-right:50px; border-right:1px solid">
                <span style="text-transform:uppercase; font-weight:500">Bạn đã có tài khoản?</span>
                <span style="font-weight:500">Tên tài khoản</span>
                <input name="txtTaiKhoan" type="text" style="height:unset; width:300px" />
                <span style="font-weight:500">Mật khẩu</span>
                <input name="txtMatKhau" type="text" style="height:unset; margin-bottom:15px; width:300px" />
                <input type="submit" id="btnSubmit" name="btnSubmit" value="ĐĂNG NHẬP" style="background-color:#f8f9fa ; border-radius:3px; border:2px solid; color:rgba(0, 0, 0, 0.7); cursor:pointer; margin-bottom:15px; text-transform:uppercase; width:300px; font-weight:700; height:unset" />
            </div>
            <div style="display:flex; flex-direction:column; padding-left:50px; padding-right:50px; width:400px; position:relative">
                <span style="text-transform:uppercase; font-weight:500">Khách hàng mới?</span>
                <span style="font-weight:500">Nếu bạn chưa có tài khoản, hãy sử dụng tùy chọn này để đăng ký!</span>
                <a id="btnSubmit" name="btnSubmit" href="@Url.Action("DangKy","NguoiDung")" style="background-color:#f8f9fa ; border-radius:3px; border:2px solid; color:rgba(0, 0, 0, 0.7); cursor:pointer; margin-bottom:15px; text-transform:uppercase; width:300px; font-weight:700; height:unset; bottom:0; position:absolute; text-align:center">Tạo tài khoản </a>
            </div>
        </div>
    }
</div>